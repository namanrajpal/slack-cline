# Application Settings
DEBUG=true
PORT=8000
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/slack_cline

# Slack Configuration
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Cline Core gRPC Configuration
CLINE_CORE_HOST=cline-core
CLINE_CORE_PORT=50051
CLINE_CORE_TIMEOUT=300

# Cline CLI Authentication Configuration
# Provider options: anthropic, openai-native, openai, openrouter, gemini, xai, cerebras, ollama
CLINE_PROVIDER=anthropic
CLINE_API_KEY=your_api_key_here
CLINE_MODEL_ID=claude-sonnet-4-5-20250929
# Optional: Base URL for OpenAI-compatible providers
CLINE_BASE_URL=

# Tenant Configuration
DEFAULT_TENANT_ID=default

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
